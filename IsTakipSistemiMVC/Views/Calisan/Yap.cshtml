@{
    ViewBag.Title = "İşleri Yap";
    Layout = "~/Views/Shared/_LayoutCalisan.cshtml";
}

<div class="container mt-5">
    @if (ViewBag.isler != null && ViewBag.isler.Count > 0) // Boş olup olmadığını kontrol et
    {
        try
        {
            foreach (var i in ViewBag.isler)
            {
                using (Html.BeginForm("Yap", "Calisan", FormMethod.Post))
                {
                    <div class="card">
                        <div class="card-header text-center">
                            <strong>@i.isBaslik</strong>
                        </div>
                        <div class="card-body">
                            <input type="hidden" name="isId" value="@i.isId" />

                            <div class="mb-3">
                                <strong>İş Açıklaması:</strong> @i.isAciklama
                                <br />
                                <label for="isYorum" class="form-label">Yorum Giriniz:</label>
                                <input type="text" class="form-control" id="isYorum" name="isYorum" required />
                            </div>
                        </div>
                        <div class="card-footer text-center">
                            <button type="submit" class="btn btn-outline-success">Tamamla</button>
                        </div>
                    </div>
                    <br />
                }
            }
        }
        catch (Exception ex)
        {
            <div class="alert alert-danger" role="alert">
                Bir hata oluştu: @ex.Message
            </div>
        }
    }
    else
    {
        <p class="text-center text-danger">Tamamlanacak iş bulunmamaktadır.</p>
    }
</div>
